version: "3.3"

services:
    phoenixd:
        container_name: phoenixd
        hostname: phoenixd
        image: massmux/phoenixd
        restart: on-failure
        volumes:
                - ${PWD}/data:/root/.phoenix
        working_dir: /app
        environment:
                - TZ=Europe/Rome
        networks:
                - backend
                - frontend

    nginx:
        container_name: nginx
        hostname: nginx
        image: massmux
        restart: on-failure
        volumes:
                - ${PWD}/nginx.conf:/etc/nginx/nginx.conf
                - ${PWD}/default.conf:/etc/nginx/conf.d/default.conf
                - ${PWD}/letsencrypt:/etc/letsencrypt
        ports:
                - 443:443
        networks:
                - backend
                - frontend

    lnbits:
      image: massmux/lnbits:0.12.10
      hostname: lnbits
      restart: on-failure
      stop_grace_period: 1m
      volumes:
        - ${PWD}/lnbitsdata:/app/data
        - ${PWD}/.env:/app/.env
      environment:
        FORWARDED_ALLOW_IPS: "*"
      networks:
        - backend


    postgres:
      image: postgres
      restart: on-failure
      environment:
        POSTGRES_PASSWORD: XXXX
        POSTGRES_DB: lnbits
        PGDATA: "/var/lib/postgresql/data/pgdata"
      volumes:
        - ${PWD}/pgdata:/var/lib/postgresql/data
        - ${PWD}/pgtmp:/var/tmp
      networks:
        - backend


networks:
  backend:
    internal: true
  frontend:
    internal: false



